                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indoor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Outdoor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlayerID }) |
                @Html.ActionLink("Details"@*display what you want in the front,*@, "Detail", new { id = item.PlayerID }) | @*what method you want to look at which is detail*@
